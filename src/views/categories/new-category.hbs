<div class="container">
    <div class="card-form">
        <div class="card-header">
            <h1>New Category</h1>
        </div>

        {{#if error}}
        <span class="error">{{error}}</span>
        {{/if}}

        <form action="/new-category" method="POST">
            <div class="form-group">
                <label for="title">Category Name</label>
                <input type="text" id="title" name="categoryName" value="{{categoryName}}">
            </div>
            <button class="card-form-button" type="submit">Create</button>
        </form>
    </div>
</div>