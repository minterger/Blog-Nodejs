<h1 id="title-article" class="title-article">{{article.title}}</h1>

<div id="container" class="container">
    <span class="author"><i class='bx bxs-user'></i> {{article.author}}</span>
    <span class="date"><i class='bx bx-calendar'></i> {{date article.createdAt}}</span>
    <span class="date"><i class='bx bxs-edit'></i> {{date article.updatedAt}}</span>

    <div class="container-content">
        {{{article.content}}}

    </div>
    <div class="comments">
        {{#if comments}}
        <h3>Comments</h3>

        {{#each comments}}
        <div class="commentary">
            <img src="https://www.gravatar.com/avatar/{{gravatar}}?s=50&default=mp" alt="">
            <div>
                <span>{{name}}</span>
                <p>{{comment}}</p>
                <p class="fecha">{{date createdAt}}</p>
            </div>
        </div>
        {{/each}}

        {{/if}}


        <div class="card-comment">
            <h3>Add A Comment</h3>
            <form action="/comments/{{article.titleUrl}}/{{article._id}}" method="post">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="4" placeholder="Comment"></textarea>
                </div>
                <button class="card-form-button">Post Comment</button>
            </form>
        </div>
    </div>
</div>
<script src="/js/iframe.js"></script>
<script>hljs.initHighlightingOnLoad();</script>